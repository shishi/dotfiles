" core

let mapleader = ' '
inoremap ; :
nnoremap ; :

set showmode
set showcmd
set showmatch
set laststatus = 2
set cmdheight = 2

set wildmenu
set wildmode = list:full

set incsearch
set hlsearch
set wrapscan
set ignorecase
set smartcase

set clipboard += unnamedplus

" keybind
nnoremap <Leader>ev :<C-u>vsplit ~/.ideavimrc<CR>
nnoremap <Leader>rv :<C-u>source ~/.ideavimrc<CR>

nnoremap x "_x

